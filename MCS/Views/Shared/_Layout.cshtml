@using MCS.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=8" />
    <title>@ViewBag.Title | MCS</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/formvalidator")
    @Styles.Render("~/Content/jTable")
    @Styles.Render("~/Content/colorbox")
    @Styles.Render("~/Content/bootstrap-table")
    <style type="text/css">
    body {
        padding-top: 60px;
        padding-bottom: 20px;
    }
    @@media (max-width: 980px) {
        body { padding-top: 0px; }
    }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jTable")
    @Scripts.Render("~/bundles/formvalidator")
    @Scripts.Render("~/bundles/noty")
    @Scripts.Render("~/bundles/colorbox")
    @Scripts.Render("~/bundles/bootstrap-table")
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="~/Home/Main">Mold Control System</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @if (Session["MCS_Authen"] != null)
                        {
                            @Html.MenuLink("Main", "Main", "Home")
                            @Html.MenuLink("Add Mold", "AddMold", "Home")
                            @Html.MenuLink("Mold Type", "MoldType", "Home")
                            @Html.MenuLink("Inspection", "Inspection", "Home")
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()

        <hr>
        <footer>
            <p>
                Copyright &copy; @DateTime.Now.Year - Thai NOK Co.,Ltd. All Rights Reserved.
                <br />
                <small>Information System Tel.6716</small>
            </p>
        </footer>
    </div>
 
    @RenderSection("scripts", required: false)
</body>
</html>
